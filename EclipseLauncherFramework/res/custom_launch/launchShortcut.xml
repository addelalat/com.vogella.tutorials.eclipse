        class="com.examole.launcher.LaunchShortcut"
        icon="icons/vogella.png"
        id="com.example.sample.shortcut"
        label="Sample Shortcut"
        modes="run, debug">
        <contextualLaunch>
            <enablement>
                <with
                    variable="selection">
                    <count
                        value="+">
                    </count>
                </with>
            </enablement>
        </contextualLaunch>
    </shortcut>
</extension>